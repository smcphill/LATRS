<h2><%= @record.datatype %></h3>
<div style="float:left;padding-right:20px;border-right:1px #aaa dashed;">
<%= render :partial => 'show_columns', :locals => {:columns => active_scaffold_config.show.columns} -%>
</div>
<div style="float:left;padding-left:20px">
<%= render :partial => 'testableitems', :locals => {:test => @record} %>
</div>
<div style="clear:both;padding-top:2em">
  <h3>Patient Details</h3>
  <span id="patient-loading"></span>
  <div id="patient-info">
  </div>
  <script type="text/javascript">
    patientInfo(<%= @record.patient.rn %>);
    document.observe('latrs:patientloaded', function(event) {
	$$('#patient-info .smalldescription').first().hide();
	$$('#patient-info .patient-history').first().hide();
    });
  </script>
</div>
<p class="form-footer">
    <%= link_to as_(:close), main_path_to_return, :class => 'cancel' %>
</p>
