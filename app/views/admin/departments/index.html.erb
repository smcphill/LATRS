<h1>Listing departments</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for department in @departments %>
  <tr>
    <td><%=h department.name %></td>
    <td><%= link_to 'Show', [:admin, department] %></td>
    <td><%= link_to 'Edit', edit_admin_department_path(department) %></td>
    <td><%= link_to 'Destroy', [:admin, department], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New department', new_admin_department_path %>
